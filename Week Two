    <section class="form-section">
        <h2>Advanced HTML5 Form</h2>
        <p>This form demonstrates various HTML5 input types and validation features.</p>
        
        <form id="registrationForm" novalidate>
            <fieldset class="full-width">
                <legend>Personal Information</legend>
                
                <div class="form-group">
                    <label for="fullName" class="required">Full Name</label>
                    <input type="text" id="fullName" name="fullName" required 
                           placeholder="Enter your full name" 
                           pattern="[A-Za-z ]{3,}" 
                           title="Please enter at least 3 alphabetical characters">
                </div>
                
                <div class="form-group">
                    <label for="email" class="required">Email Address</label>
                    <input type="email" id="email" name="email" required 
                           placeholder="your.email@example.com" 
                           autocomplete="email">
                </div>
                
                <div class="form-group">
                    <label for="phone">Phone Number</label>
                    <input type="tel" id="phone" name="phone" 
                           placeholder="123-456-7890" 
                           pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" 
                           title="Please use the format: 123-456-7890">
                </div>
                
                <div class="form-group">
                    <label for="birthdate">Date of Birth</label>
                    <input type="date" id="birthdate" name="birthdate" 
                           min="1900-01-01" max="2023-12-31">
                </div>
            </fieldset>
            
            <fieldset class="full-width">
                <legend>Account Details</legend>
                
                <div class="form-group">
                    <label for="username" class="required">Username</label>
                    <input type="text" id="username" name="username" required 
                           placeholder="Choose a username" 
                           minlength="5" 
                           pattern="[A-Za-z0-9_]+" 
                           title="Username can only contain letters, numbers, and underscores">
                </div>
                
                <div class="form-group">
                    <label for="password" class="required">Password</label>
                    <input type="password" id="password" name="password" required 
                           placeholder="Create a strong password" 
                           minlength="8"
                           pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" 
                           title="Must contain at least one number, one uppercase and lowercase letter, and at least 8 characters">
                </div>
                
                <div class="form-group">
                    <label for="website">Website URL</label>
                    <input type="url" id="website" name="website" 
                           placeholder="https://example.com">
                </div>
            </fieldset>
            
            <fieldset class="full-width">
                <legend>Additional Information</legend>
                
                <div class="form-group">
                    <label for="country">Country</label>
                    <select id="country" name="country">
                        <option value="">Select a country</option>
                        <option value="usa">United States</option>
                        <option value="canada">Canada</option>
                        <option value="uk">United Kingdom</option>
                        <option value="australia">Australia</option>
                        <option value="germany">Germany</option>
                    </select>
                </div>
                
